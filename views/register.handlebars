<div class="main">
    <div class="petition">
        <p class='pettxt'>New user please registrate:)</p>
    </div>
    <div class="formdiv">
        <form class="userdetails" method="post">
            <label>First Name:<input type="text" name="first" class="write"></label>
            <label>Last Name :<input type="text" name="last" class="write"></label>
            <label>Email Address:<input type="text" name="emailid" class="write"></label>
            <label>Password :<input type="password" name="passwd" class="write"></label>
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button type="submit" name="signupbtn" class="button">Sign Up</button>
        </form>
    </div>
    <div class="message">
        {{>ErrorMsg}}
    </div>
    <div class="loginlink">
        <p><em>If you are already a member, <a href="/login">Please Login.</a></em></p>
    </div>
</div>
